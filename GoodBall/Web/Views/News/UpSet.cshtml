@{
    Layout = "~/Views/Shared/_Page.cshtml";
}
<script>
    var id = "@Request.QueryString["Id"]";
    $(function () {
        if (id > 0) {
            loadTips.showLoading();
            BaseHelper.loadform("form1", "/News/GetNews?id=" + id, function (data) {
                loadTips.hideLoadind();
            });
        }
    })

    function Submit() {
        if (!$("#form1").form('validate')) {
            return false;
        }


        $("#id").val(id);
        loadTips.showLoading();
        var url = "/News/UpSetUser";
        $.ajax({
            type: "POST",
            url: url,
            dataType: "json",
            async: true,
            data: $("#form1").serialize(),
            success: function (data) {
                loadTips.hideLoadind();
                alert(data.message);
                if (data.success) {
                    parent.Search();
                    parent.layer.closeAll();
                }
            },
            error: function (data) {
                BaseHelper.ShowException(data);
            }
        });
    }

</script>

<form id="form1" class="easyui-doc-form">

    <input type="hidden" id="id" name="id" />

    <table class="easyui-doc-table">
        <tr>
            <td>
                标题
            </td>
            <td>
                <input type="text" id="Title" name="Title" style="padding-left:5px; line-height:20px;" class="easyui-validatebox textbox" missingmessage="请填写标题" required="true" />
            </td>
        </tr>
        <tr>
            <td>
                来源
            </td>
            <td>
                <input type="text" id="Source" name="Source" style="padding-left:5px; line-height:20px;" class="easyui-validatebox textbox" missingmessage="请填写来源" required="true" />
            </td>
        </tr>
        <tr>
            <td>
                新闻类型
            </td>
            <td>
                <select id="NewsType" name="NewsType" class="easyui-doc-select">
                    <option></option>
                    @{foreach (var item in ViewBag.NewsType)
                        {
                            <option value="@item">@item</option>
                        }}
                </select>

            </td>
        </tr>
        <tr>
            <td>
                新闻内容
            </td>
            <td>
                <input type="text" id="Content" name="Content" style="padding-left:5px; line-height:20px;" class="easyui-validatebox textbox" missingmessage="请填写电话" required="true" />
            </td>
        </tr>
        <tr>
            <td>
                积分
            </td>
            <td>
                <input type="text" id="Integral" name="Integral" style="padding-left:5px; line-height:20px;" class="easyui-validatebox textbox" missingmessage="请填写积分" required="true" />
            </td>
        </tr>
        <tr>
            <td>
                头像
            </td>
            <td></td>
        </tr>

        <tr>
            <td colspan="2" style="text-align: center;">
                <a href="javascript:;" class="easyui-linkbutton" iconcls="icon-ok" id="submitform" onclick="Submit()">保存</a>
            </td>
        </tr>

    </table>
    </div>

</form>
