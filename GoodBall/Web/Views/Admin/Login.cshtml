    <script>

        function Submit() {


            //loadTips.showLoading();
            var url = "/Admin/AdminLogin";
            $.ajax({
                type: "POST",
                url: url,
                dataType: "json",
                async: true,
                data: $("#form1").serialize(),
                success: function (data) {
                    //loadTips.hideLoadind();

                    if (data.success) {
                        window.location.href = "/home/index";
                    }
                    else {
                        alert(data.message)
                    }
                },
                //error: function (data) {
                //    BaseHelper.ShowException(data);
                //}
            });
        }

    </script>

    <form id="form1" class="easyui-doc-form">


        <table class="easyui-doc-table">
            <tr>
                <td>
                    用户名
                </td>
                <td>
                    <input type="text" id="UserName" name="UserName" style="padding-left:5px; line-height:20px;" />
                </td>
            </tr>
            <tr>
                <td>
                    密码
                </td>
                <td>
                    <input type="password" id="Password" name="Password" style="padding-left:5px; line-height:20px;" />
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center;">
                    <a href="javascript:;" class="easyui-linkbutton" iconcls="icon-ok" id="submitform" onclick="Submit()">登录</a>
                </td>
            </tr>

        </table>
        

    </form>
