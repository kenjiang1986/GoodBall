@{
    Layout = "~/Views/Shared/WechatPage.cshtml";
}


<div class="page" id="index">
    <header class="bar bar-nav">
        <h1 class="title button-fill button-danger">我的订单</h1>

    </header>
    <div class="vip content">

        <div class="spotDetail">

            <ul class="list" v-for="yq in yangqiu">
                <li>
                    <div class="tit">
                        <i></i>
                        <span>比赛：{{yq.MatchName}}</span><span class="publisher">发布者：{{yq.Operator}}</span>
                    </div>
                    <div class="time">
                        <i></i>
                        <span>开赛时间：{{yq.MatchTime }}</span>
                    </div>
                    <div class="recommend" v-if="yq.BuyState==true">
                        <i></i>
                        <span>推介：{{{yq.Content }}}</span>
                    </div>
                    <div class="analysis" v-if="yq.BuyState==true">
                        <i></i>
                        <span>分析：{{yq.Result }}</span>
                    </div>

                    <div class="tip">

                        {{{yq.LevelStr}}}

                    </div>
                </li>
            </ul>
        </div>





    </div>
</div>


<script type="text/javascript">
    (function (Vue, $, api) {
        window.vm = new Vue({
            el: '#index',
            data: {

                yangqiu: [],
                promoteType:{}

            },
            methods: {
                pageload: function (userId) {
                   
                    api.getUserOrders(userId).then(function (data) {
                        this.yangqiu = data;
                        $.hideIndicator();
                    }.bind(this), function (e) {
                        $.alert(e);
                        $.hideIndicator();
                    });
                }
            },


            ready: init(function () {
                $.scope().pageload(window.getParam('userId'));
            })
        });
    })(Vue, Zepto, jQuery.api);</script>