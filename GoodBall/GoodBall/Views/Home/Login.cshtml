<script>
    var id = "@Request.QueryString["Id"]";

    function Submit() {
        if (!$("#form1").form('validate')) {
            return false;
        }

        $("#id").val(id);
        loadTips.showLoading();
        var url = "/User/UpdateUserBalance";
        $.ajax({
            type: "POST",
            url: url,
            dataType: "json",
            async: true,
            data: $("#form1").serialize(),
            success: function (data) {
                loadTips.hideLoadind();
                alert(data.message);
                if (data.success) {
                    parent.Search();
                    parent.layer.closeAll();
                }
            },
            error: function (data) {
                BaseHelper.ShowException(data);
            }
        });
    }

</script>

<form id="form1" class="easyui-doc-form">

    <input type="hidden" id="id" name="id" />

    <table class="easyui-doc-table">
        <tr>
            <td>
                用户名
            </td>
            <td>
                <input type="text" id="UserName" name="UserName" style="padding-left:5px; line-height:20px;" class="easyui-validatebox" missingmessage="请填写用户名" required="true" />
            </td>
        </tr>
        <tr>
            <td>
                密码
            </td>
            <td>
                <input type="text" id="Password" name="Password" style="padding-left:5px; line-height:20px;" class="easyui-validatebox"  type="password" missingmessage="请填写密码" required="true" />
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: center;">
                <a href="javascript:;" class="easyui-linkbutton" iconcls="icon-ok" id="submitform" onclick="Submit()">登录</a>
            </td>
        </tr>

    </table>
    </div>

</form>
