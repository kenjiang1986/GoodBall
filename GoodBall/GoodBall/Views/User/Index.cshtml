@{
    Layout = "~/Views/Shared/_Page.cshtml";
}

<script>
    $("#easyui-rtljs").remove();
    $("#easyui-rtlcss").remove();
    $(function () {
        $("input[type=text]").validatebox();
        Search();
        if ($.validatePower("System.Company.Edit")) {
            $("#btnAdd").show();
        }
    });

    function Search() {
        var tabHeight = $(window).height();
        var code = $("#Code").val();
        var name = encodeURI($("#UserName").val());
        var validate = $("#form1").form('validate');
        if (!validate) {
            return;
        } else {
            $("#dg").datagrid({
                //height: tabHeight,
                url: "/User/GetUserList?UserName=" + name,
                onLoadError: function (data) {
                    BaseHelper.ShowException(data);
                }
            });
        }
    }

    function Update(value, row) {
        var result = "<a href='javascript:void(0)' onclick='UpdateUser(\"" + value + "\")'>编辑</a>  ";
        result += "<a href='javascript:void(0)' onclick='DelCompany(\"" + row.TID + "\",\"" + row.Name + "\")'>删除</a>";
        return result;

    }

    function DelUser(id) {

        $.messager.confirm('温馨提示', '确定要删除用户吗？', function (r) {
            if (r) {
                $.ajax({
                    type: "post",
                    url: "/User/DeleteUser",
                    data: { id: id },
                    success: function(data) {
                        if (data) {
                            alert("操作成功", "success", function() {
                                Search();
                            });
                        } else {
                            alert("操作失败", "error");
                        }
                    }
                });
            }
        });
    }
  

    function UpdateUser(tid) {
        var src = "/User/UpdateUser";
        var title = "修改用户信息";
        if (tid != '') {
            src += "?tid=" + tid;
            title = "修改";
        }
        parent.f_addTab('公司操作' + tid, '公司' + title, src);
    }

</script>

<form id="form1" class="easyui-doc-padding">
    <div id="toolbar">
        <div class="easyui-filter">
            <table>
                <tr>

                    <td>用户名称:</td>
                    <td><input type="text" id="UserName" class="easyui-doc-textbox" validtype="companyCode" maxlength="20" /></td>
                    <td><a href="javascript:;" class="easyui-linkbutton" data-options="iconCls:'icon-search'" onclick="Search()">查询</a></td>
                </tr>
            </table>
        </div>
    </div>

    <div class="easyui-doc-padding">
        <table id="dg" class="easyui-datagrid" title="" style="width:100%;min-height:350px;"
               data-options="rownumbers:true,singleSelect:true,pagination:true,method:'post',pageSize:10,toolbar:'#toolbar'">
            <thead>
                <tr>
                    <th data-options="field:'UserName',width:'20%',resizable:false,align:'left'">用户名称</th>
                    <th data-options="field:'NickName',width:'15%',resizable:false,align:'left'">昵称</th>
                    <th data-options="field:'Phone',width:'15%',resizable:false,align:'left'">电话</th>
                    <th data-options="field:'Balance',width:'32%',resizable:false,align:'left'">用户余额</th>
                    <th data-options="field:'Integral',width:'32%',resizable:false,align:'left'">用户积分</th>
                    <th data-options="field:'CreateTime',width:'32%',resizable:false,align:'left'">创建时间</th>
                 
                    <th data-options="field:'TID',width:'15%',formatter:Update">操作</th>
                </tr>
            </thead>
        </table>
    </div>
</form>
